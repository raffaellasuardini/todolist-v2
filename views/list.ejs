<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newListItems.forEach(item => {%>
  <form action="/delete/<%= listTitle%>/<%= item._id%>" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%= item._id %>"
        onchange="this.form.submit()"
      />
      <p><%= item.name %></p>
    </div>
  </form>
  <% }) %>

  <form class="item" action="/<%= listTitle%>" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
      required
    />
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>

<div class="box">
  <a class="listsLink" href="/">See all lists</a>
</div>

<div class="box">
  <form action="/delete/<%= listId %>" method="post">
    <button
      type="submit"
      name="deleteButton"
      class="deleteButton"
      value="<%= listTitle%>"
    >
      Delete this list
    </button>
  </form>
</div>

<%- include("footer") -%>
